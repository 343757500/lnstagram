<resources>

    <!-- 默认样式 -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:textColorHint">@color/text_color_gray_light</item>
        <item name="android:textColor">@color/text_color_gray_dark</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/bg_default</item>
        <item name="android:windowAnimationStyle">@style/activitySlideAnimation</item>

        <item name="android:typeface">monospace</item>
    </style>


    <style name="AppLockVerifyActivitySlideAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/activity_slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_slide_right_in</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_slide_left_out</item>
    </style>

    <!-- 白色背景页面 -->
    <style name="whiteTheme" parent="BaseAppTheme">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
    </style>


    <!-- 启动屏 -->
    <style name="SplashTheme" parent="BaseAppTheme">
        <item name="android:background">@drawable/splash</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!-- 应用锁页面 -->
    <style name="AppLockVerifyTheme" parent="BaseAppTheme">
        <item name="android:windowAnimationStyle">@style/AppLockVerifyActivitySlideAnimation</item>
    </style>



    <!-- 页面切换样式 -->
    <style name="activitySlideAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/activity_slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_slide_right_out</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="android:colorControlNormal">@color/text_color_gray_light</item>
        <item name="android:colorControlActivated">@color/color_white</item>
    </style>


    <!-- 登录注册接口 -->
