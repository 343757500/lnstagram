    <integer name="input_max_otp">4</integer>
    <integer name="input_max_password">16</integer>
    <!-- 输入框最大限制 -->
    <integer name="input_max_nick_name">32</integer>
    <integer name="input_max_remark_name">63</integer>
    <integer name="input_max_search">63</integer>
    <integer name="input_live_max_search">500</integer>
    <integer name="input_max_autograph">150</integer>
    <integer name="input_max_chat_txt">4000</integer>
    <integer name="input_max_post_txt">3200</integer>
    <integer name="input_max_group_name">63</integer>
    <integer name="input_max_group_notice">200</integer>
    <integer name="input_max_money">8</integer>
    <!--名片-->
    <integer name="input_max_card_first_name">64</integer>
    <integer name="input_max_card_last_name">64</integer>
    <integer name="input_max_card_title">32</integer>
    <integer name="input_max_card_org">64</integer>
    <integer name="input_max_card_phone">20</integer>
    <integer name="input_max_card_email">100</integer>
    <integer name="input_max_card_address">500</integer>

    <!--朋友圈-->
    <integer name="input_max_post_moment_txt">60000</integer>//发布朋友圈
    <integer name="input_max_comment_moment_txt">1000</integer>//评论朋友圈

    <integer name="input_max_watch_title">1000</integer>

</resources>
