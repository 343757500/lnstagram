<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/titleLL"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/color_white"
    android:orientation="vertical">

    <com.lhh.lnstagram.mvvm.view.HeadImageView
        android:id="@+id/header_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="7dp"
        android:visibility="gone"
        app:head_icon_height="11dp"
        app:head_icon_width="11dp"
        app:head_image_height="30dp"
        app:head_image_width="30dp" />


    <TextView
        android:id="@+id/tv_title_name_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignEnd="@+id/titleRightTv3"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="7dp"
        android:ellipsize="end"
        android:gravity="start|center_vertical"
        android:singleLine="true"
        android:textColor="@color/text_color_purple_deep"
        android:textSize="@dimen/text_size_20"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/titleRightTv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_common_transparent2background"
        android:gravity="center"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:textColor="@color/text_color_white"
        android:textSize="@dimen/text_size_l"
        android:visibility="visible" />

    <View
        android:id="@+id/view_dot"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignTop="@id/titleRightTv"
        android:layout_alignEnd="@id/titleRightTv"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/post_notification_dot"
        android:visibility="gone" />

    <TextView
        android:id="@+id/titleRightTv2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/titleRightTv"
        android:background="@drawable/bg_common_transparent2background"
        android:gravity="center"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:textColor="@color/text_color_white"
        android:textSize="@dimen/text_size_l"
        android:visibility="visible" />

    <TextView
        android:id="@+id/titleRightTv3"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/titleRightTv2"
        android:background="@drawable/bg_common_transparent2background"
        android:gravity="center"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:textColor="@color/text_color_white"
        android:textSize="@dimen/text_size_l"
        android:visibility="visible" />

    <TextView
        android:id="@+id/titleRightTv4"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/titleRightTv3"
        android:background="@drawable/bg_common_transparent2background"
        android:gravity="center"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:textColor="@color/text_color_white"
        android:textSize="@dimen/text_size_l"
        android:visibility="visible" />

    <TextView
        android:id="@+id/titleRightTv5"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/titleRightTv4"
        android:background="@drawable/bg_common_transparent2background"
        android:gravity="center"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:textColor="@color/text_color_white"
        android:textSize="@dimen/text_size_l"
        android:visibility="visible" />

    <View
        android:id="@+id/bottomLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_line_light"
        android:visibility="gone" />

</RelativeLayout>